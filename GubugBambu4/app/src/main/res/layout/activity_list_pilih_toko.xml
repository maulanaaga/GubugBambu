<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:clipToPadding="true"
    tools:context="idaulana.ac.unsyiah.gubugbambu4.ListPilihToko">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="194dp"
        android:layout_gravity="center_horizontal"
        android:background="#f1dfd4d4"
        android:id="@+id/cardView"
        android:elevation="100dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="213dp"
            android:background="#00000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/foto_toko"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/halaman_posting" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nama_toko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#433535"
                android:padding="8dp"
                android:text="Photo Title"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#f9f6f6" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
